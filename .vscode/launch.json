    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            //para executar como programa python (debugar mais rapidamente)
            // "program": "${file}", 

            // para executar como servidor Flask
            "module": "flask", 
            "env": {
                "FLASK_APP": "${file}",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run"
            ],
            "jinja": true
        }
    ]
}